<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="rockMusicBean" class="levkov.RockMusic"/>
    <bean id="classicalMusicBean" class="levkov.ClassicalMusic"/>
    <bean id="rapMusicBean" class="levkov.RapMusic"/>
    <bean id="musicPlayerBean" class="levkov.MusicPlayer" scope="prototype">
        <constructor-arg>
            <list>
                <ref bean="classicalMusicBean"/>
                <ref bean="rockMusicBean"/>
                <ref bean="rapMusicBean"/>
            </list>
        </constructor-arg>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>


</beans>